<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="0.2"
        app:srcCompat="@drawable/space_station_icon"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"/>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="0.1"
        app:srcCompat="@drawable/flight_icon"
       android:layout_toRightOf="@+id/imageView"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="0.2"
        app:srcCompat="@drawable/rovers_icon"
        android:layout_toRightOf="@id/imageView2"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/space_station"
        android:layout_below="@id/imageView"
        android:layout_marginLeft="30dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Flights"
        android:id="@+id/tvCenter"
        android:layout_below="@id/imageView2"
        android:layout_marginLeft="190dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Rovers"
        android:layout_below="@id/imageView3"
        android:layout_marginLeft="330dp">
    </TextView>

    <TextView
        android:id="@+id/textViewLeft"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:text="@string/DCA"
       android:gravity="center"
        android:textColor="@color/purple_700"
        android:background="@drawable/text_border">

    </TextView>


    <TextView
        android:id="@+id/textViewRight"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginRight="30dp"
        android:text="MARS"
        android:gravity="center"
        android:textColor="@color/purple_700"
        android:layout_toRightOf="@id/textViewLeft"
       android:background="@drawable/text_border"
        android:layout_below="@id/imageView3"
       android:layout_marginTop="30dp"
        >


    </TextView>



    <Switch
        android:id="@+id/switch1"
        android:layout_width="138dp"
        android:layout_height="76dp"
        android:layout_below="@+id/textViewLeft"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="18dp"
        android:text="One Way" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="96dp"
        android:layout_height="79dp"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="62dp"
        app:srcCompat="@drawable/arrow" />
    />

    <TextView
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_below="@+id/switch1"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:text="1 Traveller"
        android:textColor="@color/orange" />


</RelativeLayout>
</layout>




